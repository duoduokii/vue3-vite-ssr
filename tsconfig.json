{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"skipDefaultLibCheck": true,
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": ["esnext", "dom"],
		"types": ["vite/client", "node"],
		"baseUrl": ".",
		"paths": {
      "@/*": ["src/*"] 
    },
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts",  "src/**/*.vue", "src/entry-server.js"],
	// "include": ["src"],
	"exclude": [
		"node_modules"
	]
}
